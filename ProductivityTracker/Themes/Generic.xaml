<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ProductivityTracker">
    <Style TargetType="{x:Type local:TabNavigator}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TabNavigator}">
                    <Border BorderThickness="0" Background="{TemplateBinding Background}">
                        <StackPanel x:Name="HostPanel" Orientation="Horizontal" Margin="2 2 2 0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
